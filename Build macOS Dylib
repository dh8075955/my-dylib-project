name: Build macOS Dylib

on:
  workflow_dispatch:

jobs:
  build:
    runs-on: macos-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Compile C++ to dylib
        run: clang++ -dynamiclib ngu.cpp -o mylibrary.dylib

      - name: Upload dylib artifact
        uses: actions/upload-artifact@v4
        with:
          name: dylib-file
          path: mylibrary.dylib
